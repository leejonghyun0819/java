package test;
import java.util.Scanner;
public class test {
	public static void main (String[] args) {
		Scanner sc =new Scanner(System.in);				
		int N=sc.nextInt();		
		for(int i=1;i<=N;i++) {
			for(int l=1;l<=N-i;l++) {
			System.out.print(" ");
			}
			
			for(int j=0;j<i;j++) {
			System.out.print("*");
		}
			 System.out.println();
			}
		
		sc.close();	
	}
}
