import java.util.Scanner;

public class Baek2439{
    public static void main(String[] args){
        int num;
        Scanner in = new Scanner(System.in);

        num=in.nextInt();
        for(int i=1;i<=num;i++){
            for(int j=1;j<=5-i;j++){
                System.out.print(" ");
            }
            for(int j=1;j<=i;j++){
                System.out.print("*");
            }
            System.out.println("");
        }
    }
}
