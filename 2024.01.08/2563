package test;
import java.util.Scanner;
public class test{
	public static void main (String[] args) {
		Scanner sc =new Scanner(System.in);	
		int N=sc.nextInt();
		int sum=0;;
		int number[][]=new int[100][100];
		for(int i=0;i<N;i++) {
			int x=sc.nextInt();
			int y=sc.nextInt();
			for(int X=x;X<x+10;X++) {
				for(int Y=y;Y<y+10;Y++) {
					number[X][Y]++;
					if(number[X][Y]==1) {
						sum++;
					}
				}
			}
		}
		System.out.println(sum);
		
		sc.close();	
	}
}
