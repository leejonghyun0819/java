import java.util.Scanner;

public class Baek2753{
    public static void main(String[] args){
        int year;
        Scanner in = new Scanner(System.in);

        year = in.nextInt();
        if(year%4==0){
            if(year%400==0){
                System.out.println("1");
            }
            else{
                System.out.println("0");
            }
        }
        else{
            System.out.println("0");
        }
    }
}
