package test;
import java.util.Scanner;
public class test{
	public static void main (String[] args) {
		Scanner sc =new Scanner(System.in);	
		int T=sc.nextInt();
		for(int i=0;i<T;i++) {
			int R=sc.nextInt();
			String ch=sc.next();			
			for(int k=0;k<ch.length();k++) {
				for(int l=0;l<R;l++) {
				System.out.print(ch.charAt(k));			
				}			
				
				}	
			System.out.println();
			}
		sc.close();
		}
	}
