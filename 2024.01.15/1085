package test;
import java.util.Scanner;
public class test{
	public static void main (String[] args) {
		Scanner sc =new Scanner(System.in);
		int x=sc.nextInt();
		int y=sc.nextInt();
		int w=sc.nextInt();
		int h=sc.nextInt();
		int a=w-x;
		int b=h-y;
		int xmin=0;
		int ymin=0;
		xmin=a>x?x:a;
		ymin=b>y?y:b;
		System.out.print(xmin>ymin?ymin:xmin);
		
		sc.close();	
	}
}
